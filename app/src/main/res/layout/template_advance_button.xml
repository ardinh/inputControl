<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_blue_20_border_8"
    android:drawableEnd="@drawable/ic_add_blue"
    android:minHeight="64dp"
    android:padding="16dp">

        <ImageView
            android:id="@+id/ic_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:paddingEnd="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/tv_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColorHint="@color/grey_100"
            android:textSize="11sp"
            android:visibility="gone"
            android:textColor="@color/grey_100"
            app:layout_constraintStart_toEndOf="@id/ic_start"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/ic_end"/>

        <TextView
            android:id="@+id/tv_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColorHint="@color/blue_100"
            android:textColor="@color/text_primary"
            app:layout_constraintStart_toEndOf="@id/ic_start"
            app:layout_constraintTop_toBottomOf="@id/tv_label"
            app:layout_constraintEnd_toStartOf="@id/ic_end"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="12sp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/ic_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="12dp"
            android:src="@drawable/ic_add_blue"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>